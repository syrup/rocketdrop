<div class="row">
  <%= form_for @download, :html => { :multipart => true } do |f| %>
    <%= f.label :filename %>
    <%= f.file_field :filename %>
    <br \>
    <%= f.radio_button :single_use, true, :checked => true %>
    <%= f.label :single_use %>
    <br \>
    <%= f.radio_button :single_use, false %>
    <%= f.label :time_limited %>
    <br \>
    <%= f.submit %>
  <%- end %>
</div>
